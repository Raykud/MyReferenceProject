<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent= "Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "TextView_header_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name = "android:background">@color/cg_open_header_back_ground_grey</item>
        <item name = "android:textColor">@color/cg_text_light</item>
        <item name ="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_fonts</item>
        <item name = "android:textStyle">bold</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_margin">5dp</item>

    </style>


    <style name = "List_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name = "android:textSize">15sp</item>
        <item name = "android:fontFamily">@font/roboto_medium</item>

    </style>

</resources>